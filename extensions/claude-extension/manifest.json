{
  "manifest_version": 3,
  "name": "Claude Assistant",
  "version": "1.0.0",
  "description": "Claude AI Assistant Extension",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://api.anthropic.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Claude Assistant"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}